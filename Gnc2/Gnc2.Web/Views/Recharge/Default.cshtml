@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
    ViewBag.Title = "TL Yükle";
}
@using Gnc2.Com.Helpers

<section class="packageContent">
   
    <section class="textPlace fReg">
        Yükleme yapmak İstedİğİn telefon numarasını, <br />        yükleyeceğİn TL mİktarını ve kredİ kartı/banka bİlgİlerİnİ <br />        doğru bİr şekİlde gİr!
    </section>

    <form method="post" action="/PackageLoad/Step2">
        <section class="packageForm">
            <section class="item">
                <section class="left">Yükleme Yapacağın Hazır Kart Numarası:</section>
                <section class="right"><input type="text" name="HazirKart" id="HazirKart" /></section>
            </section>
            <section class="item">
                <section class="left">Yüklemek İstediğin Nar Paketi:</section>
                <section class="right rdGroup">
                    <input type="radio" name="packages" value="true" id="package1" />
                    <label for="package1">
                        <img src="@PathHelper.UrlStatic/images/global/packages/1.png" class="packageImage" /><span class="packageText">25 TL'ye 100 TL HER YÖNE</span>
                        <section class="tooltip">
                            <section class="tooltipContent">
                                <span class="title">500 extra</span>
                                <span class="text">30 gün boyunca, HER YÖNE 250 dakika, Turkcell’lilerle 250 dakika ve yanında her yöne 100 SMS ve 100 MB’lık internet kullanımı bir arada!</span>
                                <span class="button">
                                    <a href="javascript:;">Detaylı bilgi için</a>
                                </span>
                            </section>
                            <span class="arrow"></span>
                        </section>
                    </label>
                    <ins></ins>
                    <input type="radio" name="packages" value="true" id="package2" /> 
                    <label for="package2">
                        <img src="@PathHelper.UrlStatic/images/global/packages/2.png" class="packageImage" /><span class="packageText">30 TL'ye 150 TL HER YÖNE</span>
                        <section class="tooltip">
                            <section class="tooltipContent">
                                <span class="title">500 extra</span>
                                <span class="text">30 gün boyunca, HER YÖNE 250 dakika, Turkcell’lilerle 250 dakika ve yanında her yöne 100 SMS ve 100 MB’lık internet kullanımı bir arada!</span>
                                <span class="button">
                                    <a href="javascript:;">Detaylı bilgi için</a>
                                </span>
                            </section>
                            <span class="arrow"></span>
                        </section>
                    </label>
                    <ins></ins>
                    <input type="radio" name="packages" value="true" id="package3" /> 
                    <label for="package3">
                        <img src="@PathHelper.UrlStatic/images/global/packages/3.png" class="packageImage" /><span class="packageText">30 TL'ye 500 EXTRA</span>
                        <section class="tooltip">
                            <section class="tooltipContent">
                                <span class="title">500 extra</span>
                                <span class="text">30 gün boyunca, HER YÖNE 250 dakika, Turkcell’lilerle 250 dakika ve yanında her yöne 100 SMS ve 100 MB’lık internet kullanımı bir arada!</span>
                                <span class="button">
                                    <a href="javascript:;">Detaylı bilgi için</a>
                                </span>
                            </section>
                            <span class="arrow"></span>
                        </section>
                    </label>
                    <ins></ins>
                    <input type="radio" name="packages" value="true" id="package4" />                     <label for="package4">                        <img src="@PathHelper.UrlStatic/images/global/packages/4.png" class="packageImage" /><span class="packageText">20 TL'ye 100 TL TURKCELL'LİLERLE</span>
                        <section class="tooltip">
                            <section class="tooltipContent">
                                <span class="title">500 extra</span>
                                <span class="text">30 gün boyunca, HER YÖNE 250 dakika, Turkcell’lilerle 250 dakika ve yanında her yöne 100 SMS ve 100 MB’lık internet kullanımı bir arada!</span>
                                <span class="button">
                                    <a href="javascript:;">Detaylı bilgi için</a>
                                </span>
                            </section>
                            <span class="arrow"></span>
                        </section>
                    </label>
                    <ins></ins>
                    <input type="radio" name="packages" value="true" id="package5" />
                    <label for="package5">
                        <img src="@PathHelper.UrlStatic/images/global/packages/5.png" class="packageImage" /><span class="packageText">10 TL'ye 50 TL HAFTALIK</span>
                        <section class="tooltip">
                            <section class="tooltipContent">
                                <span class="title">500 extra</span>
                                <span class="text">30 gün boyunca, HER YÖNE 250 dakika, Turkcell’lilerle 250 dakika ve yanında her yöne 100 SMS ve 100 MB’lık internet kullanımı bir arada!</span>
                                <span class="button">
                                    <a href="javascript:;">Detaylı bilgi için</a>
                                </span>
                            </section>
                            <span class="arrow"></span>
                        </section>
                    </label>
                </section>
            </section>
            <section class="item">
                <section class="left">Kart Sahibinin Adı ve Soyadı:</section>
                <section class="right"><input type="text" name="NameSurname" id="NameSurname" /></section>
            </section>
            <section class="item">
                <section class="left">Kredi Kartı/Banka Kartı No:</section>
                <section class="right"><input type="text" name="CreditNo" id="CreditNo" /></section>
            </section>
            <section class="item">
                <section class="left">Son Kullanma Tarihi(aa/yy):</section>
                <section class="right">
                    <section class="date">
                        <select name="Month" id="Month" style="width:95%;">
                            <option value="01">01</option>
                            <option value="02">02</option>
                            <option value="03">03</option>
                            <option value="04">04</option>
                            <option value="05">05</option>
                            <option value="06">06</option>
                            <option value="07">07</option>
                            <option value="08">08</option>
                            <option value="09">09</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                        </select>
                    </section>
                    <section class="date">
                        <select name="Year" id="Year" style="width:95%;">
                            <option value="2013">2013</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                        </select>
                    </section>
                    <section class="cvv">
                        <label>CVV:</label>
                        <section class="text"><input type="text" name="Cvv" id="Cvv" /></section>
                    </section>
                </section>
            </section>
            <section class="item">
                <section class="left"></section>
                <section class="right"><input type="submit" name="btnSubmit" id="btnSubmit" value="TAMAM" class="fRight" /></section>
            </section>
        </section>
    </form>

    <section class="stepInfo">
        Bir sonraki adımda bankanızın ara yüzüne bağlanarak kredi kartınızın güvenli alışveriş<br />        şifresi 3D Secure ile giriş yapmanız istenecektir.        <br /><br />        Kredi kartı ile paket yüklemesi yapılan gsm numarası ilgili banka ile paylaşılacaktır.
    </section>


</section>